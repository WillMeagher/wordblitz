doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(rel="stylesheet", href='/stylesheets/fontawesome.css')
    link(rel="stylesheet", href='/stylesheets/brands.css')
    link(rel="stylesheet", href='/stylesheets/solid.css')
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    script(src="/javascripts/jquery.min.js")
    script(src="/javascripts/popper.js")
    script(src="/javascripts/bootstrap.min.js")

    block head

  body.m-0.p-0.bg-light
    div.pt-3.pb-3.ps-4.pe-4.bg-white
      div.d-flex.justify-content-between.ms-auto.me-auto(style="max-width:1200px;")
        div.d-flex.me-auto(style="width:25%;")
          a.mt-auto.mb-auto.me-3(href=process.env.APP_URL, style="color: inherit;")
            i.fa.fa-home.fa-lg
        //
          a.mt-auto.mb-auto.me-3(href=process.env.APP_URL + "/game/5", style="color: inherit;")
            i.fa.fa-play.fa-lg  
          a.mt-auto.mb-auto(href=process.env.APP_URL + "/leaderboard/5", style="color: inherit;")
            i.fa.fa-list-ol.fa-lg  

        div.d-flex.ms-auto.me-auto.justify-content-center(style="width:25%; white-space: nowrap;")
            a.mt-auto.mb-auto(href=process.env.APP_URL, style="color: inherit; text-decoration: none; white-space: nowrap;")
              h3.m-0 #{process.env.APP_NAME}

        div.d-flex.ms-auto(style="width:25%;")
          div.ms-auto.mt-auto.mb-auto(style="overflow: hidden;")
            if (typeof user === 'undefined')
              button.btn.btn-info(style="height:40px;", onclick="window.location.href='/login'") Login
            else
              // a.dropdown-toggle.text-decoration-none(href=process.env.APP_URL + '/profile', style="color: inherit; text-overflow: ellipsis; white-space: nowrap;") #{user.name}
              a#navbarDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" v-pre style="color: inherit; text-overflow: ellipsis; white-space: nowrap;") #{user.given_name}

              div.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
                <a class="dropdown-item" href="/game">Play</a>
                <a class="dropdown-item" href="/profile">Profile</a>
                <a class="dropdown-item" href="/leaderboard">Leaderboard</a>
                <a class="dropdown-item" href="/logout">Logout</a>

    hr.m-0

    if (error_message != undefined)
      div.error.d-flex.m-2.p-2 #{error_message}

    div.ms-3.me-3
      block content